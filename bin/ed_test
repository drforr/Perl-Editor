    }
  });

# }}}

# {{{ Normal KEY_BEG, '0'
Keystroke
  ({
  trie => [q{KEY_BEG},q{0}],
  type => q{normal},
  sub => sub
    {
    my ( $args ) = @_;
    my $pane     = $args->{heap}->{pane};
 
    $pane->cursor_flush_left();
    $pane->update;
    }
  });

# }}}

# {{{ Normal 'i'
Keystroke
  ({
  trie => q{i},
  type => q{normal},
  sub => sub
    {
    my ( $args ) = @_;
    my $pane     = $args->{heap}->{pane};
 
    $pane->set_mode({ mode => q{insert} });
    $pane->update;
    }
  });

# }}}

# {{{ Normal 'I'
Keystroke
  ({
