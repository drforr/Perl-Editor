    $pane->set_mode({ mode => q{insert} });
    $pane->insert_line;
    $pane->update;
    }
  });

# }}}


# {{{ Normal 'H'
Keystroke
  ({
  trie => q{H},
  type => q{normal},
  sub => sub
    {
    my ( $args ) = @_;
    my $pane     = $args->{heap}->{pane};
 
    $pane->viewport_left();
    $pane->update;
    }
  });

# }}}

# {{{ Normal 'J'
Keystroke
  ({
  trie => q{J},
  type => q{normal},
  sub => sub
