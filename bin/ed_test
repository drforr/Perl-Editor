    my $pane     = $args->{heap}->{pane};
 
    $pane->cursor_flush_bottom();
    $pane->update;
    }
  });

# }}}

# {{{ Normal KEY_DOWN, 'j'
Keystroke
  ({
  trie => [q{KEY_DOWN}, q{j}],
  type => q{normal},
  sub => sub
