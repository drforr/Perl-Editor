    my $pane     = $args->{heap}->{pane};
 
    $pane->set_mode({ mode => q{insert} });
    $pane->insert_line;
    $pane->cursor_down;
    $pane->update;
    }
  });

# }}}

# {{{ Normal 'O'
Keystroke
  ({
  trie => q{O},
